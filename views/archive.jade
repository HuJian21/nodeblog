extends layout
block content
  link(rel="stylesheet", href="/stylesheets/archive.css")
  ul.archive
    - var lastYear = 0;
    - for post in posts
      - if (lastYear != post.time.year)
        li 
          h3 #{post.time.year}年
        li.alltagsbutton
          span
            a(title="存档" href="/tags") 全部标签
      - lastYear = post.time.year
        li
          time #{post.time.day}
          a(href="/onearticle/#{post.name}/#{post.time.day}/#{post.title}") #{post.title}    
